<% provide(:class_text, 'permit-attendance') %>
<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h3 class="modal-title">【勤怠修正有無】</h3>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
          <% if Attendance.where(user_id: params[:id], status_id: '申請中').present? %>
            <%= form_with(model: @attendances, url: attendances_update_attendances_user_path, local: true, method: :patch) do |f| %>
              <% @users.each do |user| %>
                <h2>【<%= user.name %>からの勤怠修正申請】</h2>
                <div>
                  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
                    <thead>
                      <tr>
                        <th rowspan="2">日付</th>
                        <th rowspan="2">曜日</th>
                        <th colspan="2">変更前</th>
                        <th colspan="2">変更後</th>
                        <th rowspan="2">備考</th>
                        <th rowspan="2">指示者確認印</th>
                        <th rowspan="2">変更</th>
                        <th rowspan="2">勤怠を確認する</th>
                      </tr>
                      <tr>
                        <th>出勤</th>
                        <th>退勤</th>
                        <th>出勤</th>
                        <th>退勤</th>
                      </tr>
                      
                    </thead>
                  
                    <tbody>
                      <% @attendances = Attendance.where(user_id: user.id, status_id: '申請中') %>
                      <% @attendances.each do |day| %>
                        <%= f.fields_for "attendances[]", day do |attendance| %>
                    　　    <tr>
                            <td><%= l(day.worked_on, format: :short) %></td>
                            <td class="<%= calender_color(day.worked_on.wday) %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
                            <td><%= l(day.started_at, format: :time) %></td>
                            <td><%#= l(day.finished_at, format: :time) %></td>
                            <td><%#= l(day.started_at, format: :time) %></td>
                            <td><%#= l(day.finished_at, format: :time) %></td>
                            <td><%= day.note %></td>
                            <td><%= attendance.select :status_id, Attendance.status_ids.keys.to_a, { include_blank: true }, class: "form-control" %></td>
                            <td><%= attendance.check_box :permit %></td>
                            <td><%= link_to "確認", user, class: "btn btn-primary" %></td>
                          </tr>
                        <% end %>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              <% end %>
              <%= f.submit "変更を送信する", class: "btn btn-lg btn-primary" %>
            <% end %>
          <% else %>
            <h2>勤怠修正申請はありません。</h2>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>